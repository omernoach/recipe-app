<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:stretchColumns="1"
    android:background="@color/purple_500">

    <TableRow android:background="@color/orange" android:padding="8dp">
        <TextView
            android:id="@+id/nameTextView"
            android:text="Product Name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_span="2"
            android:gravity="center" />
    </TableRow>

    <TableRow
        android:background="#EDE7F6"
        android:padding="8dp">
        <TextView
            android:text="Calories:"
            android:textSize="16sp"
            android:textColor="@color/purple_500" />
        <TextView
            android:id="@+id/caloriesTextView"
            android:text="0"
            android:textSize="16sp"
            android:textColor="#000000" />
    </TableRow>

    <TableRow
        android:background="#FFFFFF"
        android:padding="8dp">
        <TextView
            android:text="Serving Size:"
            android:textSize="16sp"
            android:textColor="@color/purple_500"  />
        <TextView
            android:id="@+id/servingSizeTextView"
            android:text="0g"
            android:textSize="16sp"
            android:textColor="#000000" />
    </TableRow>

    <TableRow
        android:background="#EDE7F6"
        android:padding="8dp">
        <TextView
            android:text="Protein:"
            android:textSize="16sp"
            android:textColor="@color/purple_500"  />
        <TextView
            android:id="@+id/proteinTextView"
            android:text="0g"
            android:textSize="16sp"
            android:textColor="#000000" />
    </TableRow>

    <TableRow
        android:background="#FFFFFF"
        android:padding="8dp">
        <TextView
            android:text="Fat:"
            android:textSize="16sp"
            android:textColor="@color/purple_500"  />
        <TextView
            android:id="@+id/fatTextView"
            android:text="0g"
            android:textSize="16sp"
            android:textColor="#000000" />
    </TableRow>

    <TableRow
        android:background="#EDE7F6"
        android:padding="8dp">
        <TextView
            android:text="Fiber:"
            android:textSize="16sp"
            android:textColor="@color/purple_500"  />
        <TextView
            android:id="@+id/fiberTextView"
            android:text="0g"
            android:textSize="16sp"
            android:textColor="#000000" />
    </TableRow>

    <TableRow
        android:background="#FFFFFF"
        android:padding="8dp">
        <TextView
            android:text="Sugar:"
            android:textSize="16sp"
            android:textColor="@color/purple_500"  />
        <TextView
            android:id="@+id/sugarTextView"
            android:text="0g"
            android:textSize="16sp"
            android:textColor="#000000" />
    </TableRow>

    <TableRow
        android:background="#EDE7F6"
        android:padding="8dp">
        <TextView
            android:text="Sodium:"
            android:textSize="16sp"
            android:textColor="@color/purple_500" />
        <TextView
            android:id="@+id/sodiumTextView"
            android:text="0mg"
            android:textSize="16sp"
            android:textColor="#000000" />
    </TableRow>

    <TableRow
        android:background="#FFFFFF"
        android:padding="8dp">
        <TextView
            android:text="Potassium:"
            android:textSize="16sp"
            android:textColor="@color/purple_500" />
        <TextView
            android:id="@+id/potassiumTextView"
            android:text="0mg"
            android:textSize="16sp"
            android:textColor="#000000" />
    </TableRow>

    <TableRow
        android:background="#EDE7F6"
        android:padding="8dp">
        <TextView
            android:text="Cholesterol:"
            android:textSize="16sp"
            android:textColor="@color/purple_500" />
        <TextView
            android:id="@+id/cholesterolTextView"
            android:text="0mg"
            android:textSize="16sp"
            android:textColor="#000000" />
    </TableRow>

    <TableRow
        android:background="#FFFFFF"
        android:padding="8dp">
        <TextView
            android:text="Carbohydrates:"
            android:textSize="16sp"
            android:textColor="@color/purple_500"  />
        <TextView
            android:id="@+id/carbohydratesTextView"
            android:text="0g"
            android:textSize="16sp"
            android:textColor="#000000" />
    </TableRow>

</TableLayout>
